<div class="xl:w-2/5 md:w-2/5 mx-auto align-center my-16">
  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: 'bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4' }) do |f| %>
    <h2 class="font-semibold mb-4">Forgot your password?</h2>
    <p class="font-normal text-gray-700 text-sm mb-6"> No worries, we'll send you reset instructions. </p>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="mb-8">
      <%= f.label :email, "Enter Your Email", class: "block text-sm font-bold mb-2 text-gray-700" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
    </div>

    <div class="">
      <%= f.submit "Reset Password", class: "w-full bg-purple-500 hover:bg-purple-700 text-white font-bold py-2 px-4 mr-6 rounded focus:outline-none focus:shadow-outline" %>
    </div>
  <% end %>
</div>

